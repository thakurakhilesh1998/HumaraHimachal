<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/spash_image</item>
    </style>
    <style name="Registerandlogin" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/subMargin</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/mainPadding</item>
    </style>
    
    <style name="cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/mainPadding</item>
        <item name="android:background">@color/lighPrimaryColor</item>
    </style>
    <style name="cardtextview">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginTop">@dimen/mainPadding</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="settingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mainPadding</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/mainPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingtext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/mainPadding</item>
    </style>
    <style name="atGlanceHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/mainText</item>
        <item name="android:padding">@dimen/mainPadding</item>
    </style>

    <style name="glanceText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/subHeading</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
