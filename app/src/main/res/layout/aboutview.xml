<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/parentview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/subMargin"
    android:elevation="@dimen/ele"
    android:padding="@dimen/mainPadding">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivImageAbout"
        android:layout_width="@dimen/imagedim"
        android:layout_height="@dimen/imagedim"
        app:civ_border_width="0dp"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tvAboutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/subHeading"
        android:textColor="@color/colorWhite"
        android:layout_marginHorizontal="@dimen/mainPadding"
        />
</LinearLayout>
</layout>