<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mainPadding"
            android:background="@color/lighPrimaryColor"
            android:layout_margin="@dimen/subMargin"
            android:elevation="4dp"
            android:orientation="horizontal"
            >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivAccount"
                android:layout_width="@dimen/imagedim"
                android:layout_height="@dimen/imagedim"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/account"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/lighPrimaryColor"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/subMargin"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mainName"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/settingtext"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/mainPadding"
            >
            <TextView
                style="@style/settingTextView"
                android:id="@+id/changepassword"
                android:text="@string/change_password"
                android:drawableLeft="@drawable/changepass"
                android:elevation="@dimen/ele"
                />

            <TextView
                android:id="@+id/share"
                style="@style/settingTextView"
                android:drawableLeft="@drawable/share"
                android:text="@string/share_with_friends"
                android:elevation="@dimen/ele"
                />

            <TextView
                android:id="@+id/logout"
                style="@style/settingTextView"
                android:text="@string/logout"
                android:drawableLeft="@drawable/logout"
                android:elevation="@dimen/ele"
                />
            <TextView
                android:id="@+id/contactUs"
                style="@style/settingTextView"
                android:text="@string/contact_us_email"
                android:drawableLeft="@drawable/contactus"
                android:elevation="@dimen/ele"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</layout>